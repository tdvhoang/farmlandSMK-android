<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dip"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:text="PIN mới"
                android:textColor="@android:color/black"
                android:padding="10dip"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:hint="@string/pin_smk_default"
                android:id="@+id/etNewPINSMKFragment"
                android:gravity="right"
                android:maxLength="9"
                android:textColor="#3574B6"
                android:padding="15dip"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dip"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Thời gian"
            android:textColor="@android:color/black"
            android:padding="10dip"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:hint="@string/time_smk_default"
            android:id="@+id/etTimePINSMKFragment"
            android:gravity="right"
            android:maxLength="2"
            android:textColor="#3574B6"
            android:padding="10dip"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/ibSavePINSMKFragment"
        android:layout_marginTop="4dip"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:scaleType="fitStart"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>